                                            @* neu display khong null thi tiep tuc *@
                                            @if (displayList != null)
					                        {
                                                @* voi moi cot dang co *@
                                                @* neu cot isdisplay = false thi không hien thi (chỉ lấy giá trị)  *@
                                                @foreach (var display in displayList.Where(p=> p.isdisplay == false).OrderBy(p => p.colnum ?? 0).ToList())
