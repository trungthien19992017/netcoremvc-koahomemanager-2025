                                                                {
                                                                    var filesJson = value?.ToString()?.Trim() ?? "";

                                                                    // Nếu rỗng thì bỏ qua
                                                                    if (!string.IsNullOrEmpty(filesJson))
                                                                    {
                                                                        // Nếu là object đơn, bao lại thành mảng
