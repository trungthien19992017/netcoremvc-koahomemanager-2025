                                                }
                                                @* hien thi cot stt dau tien neu co *@
						                        @foreach (var display in displayList.Where(p=> p.isdisplay == true && p.code?.ToLower() == "stt" && p.isparent == false && string.IsNullOrEmpty(p.parentcode?.ToLower())).OrderBy(p => p.colnum ?? 0).ToList())
