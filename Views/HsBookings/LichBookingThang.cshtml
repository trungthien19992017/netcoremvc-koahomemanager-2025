                                        object value;
                                        if (dictionary.TryGetValue(display.Code, out value))
                                        {
                                            @Html.Raw(value)
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span> @* Gi√° tr·ªã m·∫∑c ƒë·ªãnh *@
