                      @if (resultList != null && displayList != null)
                      {
                        @* voi moi dong resultlist *@
                        @foreach (var result in resultList)
                        {
                            var dictionary = (IDictionary<string, object>)result;
                            <tr>
                            @* voi moi cot dang co *@
